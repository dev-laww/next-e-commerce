{
  "name": "next-e-commerce",
  "version": "0.1.0",
  "private": true,
  "prisma": {
    "seed": "ts-node --transpile-only --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "lint-staged": {
    "src/**/*": [
      "yarn eslint:format"
    ]
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "clean": "rimraf .next .swc out coverage",
    "lint": "next lint",
    "start": "next start",
    "studio": "prisma studio",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest unit",
    "test:watch": "jest --watch unit",
    "test:integration": "jest integration",
    "test:cov": "jest --coverage",
    "test:ci": "jest --ci",
    "prepare": "husky install",
    "eslint:format": "eslint . --ext ts --ext tsx --ext js",
    "generate": "plop --plopfile ./.plop/plopfile.js"
  },
  "dependencies": {
    "@prisma/client": "^5.1.0",
    "autoprefixer": "10.4.14",
    "bcryptjs": "^2.4.3",
    "crypto-js": "^4.1.1",
    "jsonwebtoken": "^9.0.1",
    "next": "13.4.9",
    "nodemailer": "^6.9.4",
    "pino": "^8.15.0",
    "pino-pretty": "^10.2.0",
    "postcss": "8.4.25",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/bcryptjs": "^2.4.2",
    "@types/crypto-js": "^4.1.1",
    "@types/humps": "^2.0.3",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.4.1",
    "@types/nodemailer": "^6.4.9",
    "@types/react": "18.2.14",
    "@types/react-dom": "18.2.6",
    "eslint": "8.44.0",
    "eslint-config-next": "13.4.9",
    "humps": "^2.0.1",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "jest-fetch-mock": "^3.0.3",
    "jest-mock-extended": "^3.0.5",
    "lint-staged": "13.2.3",
    "plop": "^3.1.2",
    "prisma": "^5.1.0",
    "tailwindcss": "3.3.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
