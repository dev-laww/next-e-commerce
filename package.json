{
  "name": "next-e-commerce",
  "version": "0.1.0",
  "private": true,
  "prisma": {
    "seed": "ts-node --transpile-only --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "lint-staged": {
    "src/**/*": [
      "npm run eslint:format"
    ]
  },
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && prisma migrate deploy && next build",
    "build:local": "dotenv -e .env.development.local next build",
    "clean": "rimraf .next .swc out coverage",
    "lint": "next lint",
    "start": "next start",
    "test": "jest",
    "test:unit": "jest unit",
    "test:watch": "jest --watch unit",
    "test:integration": "jest integration",
    "test:cov": "jest --coverage",
    "test:ci": "jest --ci",
    "prepare": "husky install",
    "eslint:format": "eslint . --ext ts --ext tsx --ext js",
    "generate": "plop --plopfile ./.plop/plopfile.js",
    "prisma:generate": "dotenv -e .env.development.local prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:migrate:dev": "dotenv -e .env.development.local prisma migrate dev",
    "prisma:migrate:reset": "dotenv -e .env.development.local prisma migrate reset",
    "prisma:seed": "prisma db seed -- --environment production",
    "prisma:seed:dev": "dotenv -e .env.development.local -- prisma db seed",
    "prisma:studio": "dotenv -e .env.development.local prisma studio",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build"
  },
  "dependencies": {
    "@prisma/client": "^5.2.0",
    "autoprefixer": "10.4.14",
    "bcryptjs": "^2.4.3",
    "crypto-js": "^4.1.1",
    "jsonwebtoken": "^9.0.1",
    "next": "^13.5.4",
    "nodemailer": "^6.9.4",
    "pino": "^8.15.0",
    "pino-pretty": "^10.2.0",
    "postcss": "^8.4.31",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^7.4.3",
    "@storybook/addon-interactions": "^7.4.3",
    "@storybook/addon-links": "^7.4.3",
    "@storybook/addon-onboarding": "^1.0.8",
    "@storybook/blocks": "^7.4.3",
    "@storybook/nextjs": "^7.4.3",
    "@storybook/react": "^7.4.3",
    "@storybook/testing-library": "^0.2.1",
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/bcryptjs": "^2.4.2",
    "@types/crypto-js": "^4.1.1",
    "@types/humps": "^2.0.3",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.6.3",
    "@types/nodemailer": "^6.4.9",
    "@types/react": "18.2.14",
    "@types/react-dom": "18.2.6",
    "dotenv-cli": "^7.3.0",
    "eslint": "8.44.0",
    "eslint-config-next": "13.4.9",
    "eslint-plugin-storybook": "^0.6.14",
    "humps": "^2.0.1",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "jest-fetch-mock": "^3.0.3",
    "jest-mock-extended": "^3.0.5",
    "lint-staged": "13.2.3",
    "plop": "^3.1.2",
    "prisma": "^5.4.1",
    "storybook": "^7.4.3",
    "tailwindcss": "3.3.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
